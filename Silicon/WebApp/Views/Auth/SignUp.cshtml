@{
    ViewData["Title"] = "Sign Up";
}

@{
    // SignUpSuccessful is passed when the POST version of 
    // SignUp() successfully creates an account.
    if (ViewData["SignUpSuccessful"] is bool success && success)
    {
        <partial name="~/Views/Partials/Sections/SignUp/_SignUpSuccess.cshtml" />
    }
    else
    {
        <partial name="~/Views/Partials/Sections/SignUp/_SignUpForm.cshtml" />
        <script src="~/js/partials/auth/signup.js" type="module" defer></script>
    }
}